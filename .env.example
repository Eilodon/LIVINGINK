# ============================================================
# Color Jelly Rush - Environment Configuration
# ============================================================
# SECURITY: Never commit real credentials to version control.
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# Database Configuration
POSTGRES_USER=cjr_user
POSTGRES_PASSWORD=           # REQUIRED: Use a strong password (min 16 chars)
POSTGRES_DB=color_jelly_rush
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=              # REQUIRED: Use a strong password (min 16 chars)

# JWT Configuration
JWT_SECRET=                  # REQUIRED: Min 32 chars. Generate with: openssl rand -hex 32
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Admin Account
ADMIN_PASSWORD=              # REQUIRED in production: Min 16 chars

# Microservices Ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
GAME_SERVICE_PORT=3003
ANALYTICS_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Grafana
GF_SECURITY_ADMIN_PASSWORD=  # REQUIRED: Use a strong password

# Node Environment
NODE_ENV=development

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# CORS
CORS_ORIGIN=http://localhost:5173
