{
  "name": "color-jelly-rush",
  "private": true,
  "version": "1.0.0-beta.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,scss,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,scss,css}\"",
    "tool:level": "cd tools/level-editor/ui && npm run dev",
    "tool:inspector": "cd tools/packet-inspector && npm run dev",
    "tool:state": "cd tools/state-viewer && npm run dev",
    "tool:level-server": "cd tools/level-editor/server && npm run dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "artillery": "^2.0.29",
    "autoprefixer": "^10.4.20",
    "canvas": "^3.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.3",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-glsl": "^1.5.5",
    "vitest": "^4.0.18"
  }
}