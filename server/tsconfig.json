{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@services/*": [
        "../services/*"
      ],
      "@types/*": [
        "../types.ts"
      ],
      "@constants/*": [
        "../constants.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../services/**/*",
    "../types.ts",
    "../constants.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}